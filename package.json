{
  "name": "my-nuxt-starter-template",
  "version": "1.0.0",
  "description": "Мой простой стартовый шаблон для проектов на Nuxt с линтерами и тестами",
  "repository": "https://github.com/newbornfrontender/my-nuxt-starter-template.git",
  "author": "Infant Frontender <newbornfrontender@gmail.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "vue",
    "nuxt",
    "eslint",
    "stylelint",
    "jest"
  ],
  "scripts": {
    "serve": "cross-env NODE_ENV=development nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "stylelint": "stylelint **/*.{css,vue}",
    "stylelint:fix": "yarn stylelint --fix",
    "eslint": "eslint --ext js,jsx,vue .",
    "eslint:fix": "yarn eslint --fix",
    "test": "jest",
    "test:snapshot": "yarn test --updateSnapshot"
  }
}
